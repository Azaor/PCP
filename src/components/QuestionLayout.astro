---
import Prose from './Prose.astro';

export interface Props {
  title: string;
  shortAnswer: string;
  sources: { label: string; url: string }[];
  nextQuestion: { label: string; url: string } | null;
}
const { title, shortAnswer, sources, nextQuestion } = Astro.props;
---

<main class="pt-24 pb-12 max-w-3xl mx-auto px-4">
  <h1 class="text-4xl md:text-5xl font-extrabold mb-8 text-primary leading-tight">{title}</h1>

  <section class="mb-10">
    <h2 class="text-2xl font-bold mb-4 text-base-content">Réponse courte</h2>
    <p class="text-lg text-base-content/80">{shortAnswer}</p>
  </section>

  <section class="mb-10">
    <h2 class="text-2xl font-bold mb-4 text-base-content">Réponse détaillée</h2>
    <Prose>
      <slot />
    </Prose>
  </section>

  {sources.length > 0 && (
    <section class="mb-10">
      <h2 class="text-2xl font-bold mb-4 text-base-content">Sources et références</h2>
      <ul class="list-disc list-inside space-y-2">
        {sources.map(source => (
          <li>
            <a href={source.url} class="link link-primary" target="_blank">{source.label}</a>
          </li>
        ))}
      </ul>
    </section>
  )}

  <div class="flex flex-wrap gap-4">
    <a href="/" class="btn btn-neutral">Retour à l’accueil</a>
    {nextQuestion && (
      <a href={nextQuestion.url} class="btn btn-primary">{nextQuestion.label}</a>
    )}
  </div>
</main>
