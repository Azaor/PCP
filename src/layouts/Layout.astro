---
import "../assets/app.css";

export interface LayoutProps {
  title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en" data-theme="bumblebee">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/src/assets/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>PCP - {title}</title>
	</head>
	<body>
		<header
			class="navbar fixed top-0 z-50 backdrop-blur bg-base-100/80 shadow"
		>
			<div
				class="container mx-auto flex justify-between items-center px-4 py-2"
			>
				<!-- Logo -->
				<img
					src="/src/assets/logo.png"
					alt="PCP Logo"
					class="h-10 w-10 mr-2"
				/>
				<a href="/" class="text-2xl font-bold text-primary">
					Pourquoi c'est problématique ?
				</a>
				<nav>
					<a class="btn btn-sm btn-primary" href="/q/">
						Questions
					</a>
				</nav>
			</div>
		</header>
		<slot />
		<!-- Footer -->
		<footer class="footer p-10 bg-base-100 mt-12 border-t">
			<div class="container mx-auto">
				<p class="text-sm text-base-content/70">
					© 2025 FAQ Racisme. Conçu pour informer et sensibiliser.
				</p>
			</div>
		</footer>
	</body>
</html>
